@using App.Domain.Core.Hw20.CarModel.Entities
@using App.Infra.Data.Repos.Ef.Hw20.CarModel
@model List<CarModelDto>

<a asp-action="AddCarList" class="btn btn-primary" type="button">Add</a>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Car Model</th>
                <th scope="col">Company</th>
                <th scope="col">Operator</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in @Model)
            {
                <tr>
                    <th scope="row">@car.Id</th>
                    <td>@car.Name</td>
                    <td>@car.CompanyName</td>
                   
                    <td>
                        <a asp-controller="Admin" asp-action="UpdateCarList" asp-route-id="@car.Id" class="btn btn-warning" type="button">Update</a>
                        <a asp-controller="Admin" asp-action="DeleteCarModel" asp-route-id="@car.Id" class="btn btn-danger" type="button">Delete</a>
                        <a asp-controller="Admin" asp-action="PreviewCarList" asp-route-id="@car.Id" class="btn btn-success" type="button">Preview</a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
